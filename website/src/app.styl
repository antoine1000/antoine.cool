
/* --------- Colors --------- */

black = #000
green = #6AFFBA

/* --------- Mixins --------- */

xs = 8px
sm = 12px
md = 14px
xl = 22px
xxl = 28px


/* --------- Fonts --------- */

@font-face {
    font-family: HK-Grotesk;
    src: url(fonts/HK-Grotesk-Regular/hkgrotesk-regular-webfont.woff);
}

@font-face {
    font-family: HK-Grotesk-Italic;
    src: url(fonts/HK-Grotesk-Italic/hkgrotesk-italic-webfont.woff);
}

@font-face {
    font-family: HK-Grotesk-Bold;
    src: url(fonts/HK-Grotesk-Bold/hkgrotesk-bold-webfont.woff);
}


@font-face {
    font-family: Terminal-Grotesque;
    src: url(fonts/Terminal-Grotesque/terminal-grotesque-webfont.woff)
 }

@font-face {
    font-family: Terminal-Grotesque-Open;
    src: url(fonts/Terminal-Grotesque-Open/terminal-grotesque_open.woff)
}


/* --------- Main --------- */


 

main
  display flex
  flex-direction column
  justify-content space-between
  min-height 98vh
  
header 
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  height 5vh
  // top right bottom left
  margin 2.5vh 2.5vw 2.5vh 5vw
  
// Left part of the header 
#left
  display flex
  flex-direction row
  justify-content flex-start
  width 66.6vw
#left > a
  font-family HK-Grotesk-Bold
  
// Right part of the header
#right
  display flex
  flex-direction row
  justify-content space-around
  width 33.3vw
 
  
footer 
  display flex
  flex-direction row
  justify-content flex-end
  align-items center
  height 5vh
  margin 2.5vh 4vw 1vh 2.5vw

footer a
  font-family HK-Grotesk-Italic
  font-size 0.8em
 
  
.projects {
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-end
  flex 1
  margin-right 8vw
  font-size 28px
  //overflow-y scroll
}


a, p
  font-family HK-Grotesk, Helvetica, sans-serif
  color black
  line-height 1.40
  
ul
  font-family Terminal-Grotesque-Open, Helvetica, sans-serif
  font-weight 100
  font-size 3em
  color black
  line-height 1
  list-style none
  text-align right
ul a 
  font-family Terminal-Grotesque, Helvetica, sans-serif
  

a:hover {
  color green;
  }
    
a:active {
  color green;
  font-family HK-Grotesk-Bold
}
    
a {
    color: #000;
    text-decoration: none;
}

.sticky
  position -webkit-sticky
  position sticky
  top 0
  overflow: scroll
  
.sticky:before,
.sticky:after {
    content: '';
    display: table;
}

/* ----- Project page ----- */

.main-project {
  display flex
  flex-direction column
  justify-content center
  align-items center
  flex 1
  font-size 28px
  min-width 50vw
  padding 2.5vh 5vw 2.5vh 5vw
  //overflow-y scroll
}

.title
  display flex
  align-self flex-end
  justify-content space-between
  min-width 35vw
  max-width 100vw
.title h2
    font-family Terminal-Grotesque-Open, Helvetica, sans-serif
.title span {
    font-family Terminal-Grotesque
}

    

.nav
  display flex
  align-items center
  font-size 1.2em
  margin-left 1em
  //align-self flex-end


.preview
  display flex
  width 50vw
  height 60vh
  background green
  
.description
  display flex
  flex-direction column
  align-self flex-start
  max-width 70vw
  font-family HK-Grotesk
.description h5
  font-family HK-Grotesk-Bold
  color green
  
  
.project-images
  display flex
  flex-direction column
  justify-content center
  align-items center
  min-width 100vw
.project-images img
  height 40vh
  width 50vw
  margin 2.5vh 2.5vw
  background green


/* ----- Media Queries - Responsive Design ----- */

@media all and (max-width: 1400px) {
    .projects {
      font-size 22px
    }
  }
  
@media all and (max-width: 768px) {
    .projects {
      font-size 14px
    }

    #left {
      width: 55vw
    }
    
    #right {
      width: 45vw
    }
    
    ul {
      text-align right
    }
  }
  
@media all and (max-width: 520px) {
    .projects {
      font-size 8px
      height 80vh
      justify-content flex-start
    }
  footer {
    bottom: 0
    right: 0
  }
  }

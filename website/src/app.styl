@import 'flickity.css'

/* --------- Colors --------- */

black = #000
green = #6AFFBA

/* --------- Variables --------- */

xs = 12px
sm = 14px
md = 16px
xl = 20px
lg = 24px




/* --------- Fonts --------- */

@font-face {
    font-family: HK-Grotesk;
    src: url(fonts/HK-Grotesk-Regular/hkgrotesk-regular-webfont.woff);
}

@font-face {
    font-family: HK-Grotesk-Italic;
    src: url(fonts/HK-Grotesk-Italic/hkgrotesk-italic-webfont.woff);
}

@font-face {
    font-family: HK-Grotesk-Bold;
    src: url(fonts/HK-Grotesk-Bold/hkgrotesk-bold-webfont.woff);
}


@font-face {
    font-family: Terminal-Grotesque;
    src: url(fonts/Terminal-Grotesque/terminal-grotesque-webfont.woff)
 }

@font-face {
    font-family: Terminal-Grotesque-Open;
    src: url(fonts/Terminal-Grotesque-Open/terminal-grotesque_open.woff)
}

/* ---------- */

textfont = HK-Grotesk
titlefont = Terminal-Grotesque


/* --------- Main --------- */


main
  display flex
  flex-direction column
  justify-content space-between
  min-height 98vh
  
header 
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  height 5vh
  // top right bottom left
  margin 2.5vh 2.5vw 2.5vh 5vw
  
// Left part of the header 
#left
  display flex
  flex-direction row
  justify-content flex-start
  width 66.6vw
#left > a
  font-family HK-Grotesk-Bold
  
// Right part of the header
#right
  display flex
  flex-direction row
  justify-content space-around
  width 33.3vw
 
  
footer 
  display flex
  flex-direction row
  justify-content flex-end
  align-items center
  height 5vh
  margin 2.5vh 4vw 1vh 2.5vw

footer a
  font-family HK-Grotesk-Italic
  font-size 0.8em
 
  
.projects {
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-end
  flex 1
  margin-right 8vw
  font-size 28px
  //overflow-y scroll
}


a, p
  font-family textfont, Helvetica, sans-serif
  color black
  line-height 1.40
  
p
  font-size xl
  
ul
  font-family Terminal-Grotesque-Open, Helvetica, sans-serif
  font-weight 100
  font-size 3em
  color black
  line-height 1
  list-style none
  text-align right
ul a 
  font-family Terminal-Grotesque, Helvetica, sans-serif
  

a:hover {
  color green;
  }
        
a {
    color: #000;
    text-decoration: none;
}

.sticky
  position -webkit-sticky
  position sticky
  top 0
  
.sticky:before,
.sticky:after {
    content: '';
    display: table;
}

/* ----- Project page ----- */

.main-project {
  display flex
  flex-direction column
  justify-content center
  align-items center
  flex 1
  font-size 28px
  min-width 50vw
  padding 2.5vh 5vw 2.5vh 5vw
  //overflow-y scroll
}


.title
  display flex
  align-self flex-end
  justify-content space-between
  min-width 35vw
  max-width 100vw
  z-index: 1;
.title p
    font-size 1.7em
    font-family Terminal-Grotesque-Open, Helvetica, sans-serif
.title span {
    font-family Terminal-Grotesque
    color green
}


.nav
  display flex
  align-items center
  font-size 1.2em
  margin-left 1em


.preview
  align-self flex-start
  max-width 50vw
  height auto
.preview > img, iframe
  max-width 100%
  max-height 50vh
.preview a
  width 0px
  height 0px

  
.description
  display flex
  flex-direction column
  align-self flex-start
  max-width 45vw
  font-family HK-Grotesk
.description h5
  font-family HK-Grotesk-Bold
  color green
  font-size lg
  margin 5vh 0 0 0
.description ul
  font-size xl
  font-family HK-Grotesk
  text-align left
  padding 0
.description a
  font-family HK-Grotesk

  

.project-images
  display flex
  flex-direction column
  justify-content center
  align-items center
  max-width 50vw
.project-images img
  height auto
  max-width 100%
  margin 5vh 0 5vw 0
  


/* ----- Responsive Design with Rupture ----- */


// Mobile Version
+mobile()
  header 
    display: block
    text-align: center
    width: initial
    margin 0
  #left, #right
    width 100vw
    align-self center
    margin-top 2vh
    margin-bottom 2vh
  #left
    justify-content center
  #right
    justify-content space-around
  
  .title
    margin-top 2vh

  .description p, .title 
    font-size 0.5em
   
  .description h5 
    font-size 0.7em
    
  .preview
    align-self center
    max-width 50vw
    height auto
  .description
    max-width 70vw
  .description ul
    font-size 0.5em
  .description a
    font-size 1em
    
   .projects
    justify-content center
    font-size 0.4em
    padding-top 10vh
    
    
+between(400px, 600px)
  p
    font-size 0.6em
  #right
    width 50vw
  .title
    align-self center
  .title p, .nav
    font-size 1em
  .projects
    justify-content center
    font-size 0.5em
    
  
+between(600px, 1050px)
  .projects
    font-size 0.7em
  
 
